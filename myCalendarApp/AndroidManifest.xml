<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.moonila.mycalendar.app.view"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="18" />

    <application
        android:name=".application.MyCalendarApplication"
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/my_calendar_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" 
        android:logo="@drawable/my_calendar_logo">
        <activity
            android:name=".activity.MyCalendarMainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:hardwareAccelerated="false"
            android:label="@string/app_name"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MyCalendarActionActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>